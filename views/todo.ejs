<!DOCTYPE html>
  <head>
    <%-include('./inc/header.ejs')%>
  </head>

  <body>
    <div class="container">
      <div class="row justify-content-center ">
        <div class="col-md-5 ">
        
          <div class=" todo border border-2 border-dark rounded">
            
            <div class="form">
                <form method="POST">
                <div class=" mt-3 pt-3 px-3 py-3">
                  <label for="todo-text" class="form-label">ToDo</label>
                  <input type="text" class="form-control" id="todo-text" name="text">
                </div>
                <div class="p-3">
                  <button class="btn btn-primary" type="submit">Add Todo</button>
                </div>
                </form>
              </div>
              <div class="todolist">
                
                <%todolist.forEach(todo=>{ %>
                  <%var array=todo.todos %>
                  
                  <%array.forEach(todotext=>{%>
                    <div class="todotext">
                      <%=todotext.text%>
                    </div></br>
                   
                 <% }) %>
                    
                <!-- BurasÄ± doldurulacak  -->
                <%}) %>
              </div>
            </div>
            </div>
          </div>
        </div>
        </div>

    <%-include('./inc/footer.ejs')%>
  </body>
</html>